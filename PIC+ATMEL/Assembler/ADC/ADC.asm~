START:
	LCALL	INI
LOOP:	MOV	A,#01H
	LCALL	CMD
	MOV	A,P0
	LCALL	CLS
	LCALL	CONV
	LCALL	DISP
	MOV	A,P2
	LCALL	CLS
	LCALL	CONV
	LCALL	DISP
	LJMP	LOOP

INI:	MOV	A,#38H
	LCALL	CMD
	MOV	A,#0DH
	LCALL	CMD
	MOV	A,#01H
	LCALL	CMD
	MOV	A,#06H
	LCALL	CMD
	RET

CMD:	MOV	P1,A
	CLR	P3.0	
	SETB	P3.1 ;Se enciende la LCD
	CLR	P3.1 ;Se apaga la LCD
	LCALL	DELAY
	RET

DISP:	MOV	P1,A
	SETB	P3.0
	SETB	P3.1	
	CLR	P3.1
	LCALL	DELAY
	RET

CONV:	MOV	R0,#0AH
	MOV	R1,A
	SUBB	A,R0
	JC	NUM
	MOV	R0,#37H
	MOV	A,R1
	ADD	A,R0
	LJMP	OUT
NUM:	MOV	R0,#30H
	MOV	A,R1
	ADD	A,R0
OUT:	RET

CLS:	CLR	A.7
	CLR	A.6
	CLR	A.5
	CLR	A.4
	RET
	
DELAY:	MOV	R5,#0FFH
LOOP2:	MOV	R6,#0FFH
LOOP1:	DJNZ	R6,LOOP1
	DJNZ	R5,LOOP2
	RET
	END