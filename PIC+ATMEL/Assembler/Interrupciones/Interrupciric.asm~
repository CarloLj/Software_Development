		ORG 0000H
		LJMP START
		ORG 0003H
		LJMP INTE1
		ORG 0013H
		LJMP INTE2
		ORG 0025H
START:
	MOV IE,#85H	
	MOV	A,#38H  ;SE INICIA PANTALLA
	LCALL	CMD
	MOV	A,#0DH
	LCALL	CMD
	MOV	A,#01H
	LCALL	CMD
	MOV	A,#06H
	LCALL	CMD
START2:	
	MOV	A,#01H
	LCALL	CMD
	MOV	A,#43H
	LCALL	DISP
	MOV	A,#4FH
	LCALL	DISP
	MOV	A,#4DH
	LCALL	DISP
	MOV	A,#4FH
	LCALL	DISP
	MOV	A,#1CH
	LCALL	CMD
	MOV	A,#1CH
	LCALL	CMD
	MOV	A,#1CH
	LCALL	CMD
	MOV	A,#1CH
	LCALL	CMD
	MOV	A,#1CH
	LCALL	CMD
	MOV	A,#1CH
LCALL	CMD
	MOV	A,#1CH
	LCALL	CMD
	MOV	A,#1CH
	LCALL	CMD
	MOV	A,#1CH
	LCALL	CMD
	MOV	A,#1CH
	LCALL	CMD
	MOV	A,#1CH
	LCALL	CMD
	MOV	A,#1CH
	SJMP START2
CMD:	
	MOV	P1,A
	CLR	P3.0	
	SETB	P3.1 ;Se enciende la LCD
	CLR	P3.1 ;Se apaga la LCD
	LCALL	DELAY
	RET

DISP:	
	MOV	P1,A
	SETB	P3.0
	SETB	P3.1	
	CLR	P3.1
	LCALL	DELAY
	RET
	
	DELAY:	MOV	R5,#0FFH
LOOP2:	MOV	R6,#0FFH
LOOP1:	DJNZ	R6,LOOP1
	DJNZ	R5,LOOP2
	RET
	;------------------------------------------
CMD2:	
	MOV	P1,A
	CLR	P3.0	
	SETB	P3.1 ;Se enciende la LCD
	CLR	P3.1 ;Se apaga la LCD
	LCALL	DELAY2
	RET

DISP2:	
	MOV	P1,A
	SETB	P3.0
	SETB	P3.1	
	CLR	P3.1
	LCALL	DELAY2
	RET
	
DELAY2:	MOV	R5,#0FFH
LOOP22:	MOV	R6,#0FFH
LOOP12:	DJNZ	R6,LOOP12
	DJNZ	R5,LOOP22
	RET
	;-------------------------------------------
INTE1:
	MOV	A,#38H
	LCALL	CMD2
	MOV	A,#0DH
	LCALL	CMD2
	MOV	A,#01H
	LCALL	CMD2
	MOV	A,#06H
	LCALL	CMD2
	;LCALL	INI
	MOV	A,#01H
	LCALL	CMD2
	MOV	A,#52H
	LCALL	DISP2
	MOV	A,#7CH
	LCALL	DISP2
	MOV	A,#43H
	LCALL	DISP2
	MOV	A,#41H
	LCALL	DISP2
	MOV	A,#52H
	LCALL	DISP2
	MOV	A,#44H
	LCALL	DISP2
	MOV	A,#4FH
	LCALL	DISP2
	RETI
INTE2:
	MOV	A,#38H
	LCALL	CMD2
	MOV	A,#0DH
	LCALL	CMD2
	MOV	A,#01H
	LCALL	CMD2
	MOV	A,#06H
	LCALL	CMD2
	;LCALL	INI
	MOV	A,#01H
	LCALL	CMD2
	MOV	A,#47H
	LCALL	DISP2
	MOV	A,#4FH
	LCALL	DISP2
	MOV	A,#4EH
	LCALL	DISP2
	MOV	A,#5AH
	LCALL	DISP2
	MOV	A,#41H
	LCALL	DISP2
	MOV	A,#4CH
	LCALL	DISP2
	MOV	A,#45H
	LCALL	DISP2
	MOV	A,#5AH
	LCALL	DISP2

	MOV     A,#14H
	LCALL CMD2

	MOV	A,#4CH
	LCALL	DISP2
	MOV	A,#45H
	LCALL	DISP2
	MOV	A,#41H
	LCALL	DISP2
	MOV	A,#5CH
	LCALL	DISP2
	RETI
	FIN:
	END

